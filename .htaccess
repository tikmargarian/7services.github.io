RewriteEngine On
RewriteBase /

# 1. Не трогаем реальные файлы и папки
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 2. index.html → /
RewriteRule ^index\.html$ / [R=301,L]

# 3. Убираем завершающий слэш (КРОМЕ главной)
RewriteCond %{REQUEST_URI} !^/$
RewriteCond %{REQUEST_URI} .+/$
RewriteRule ^(.+)/$ $1 [R=301,L]

# 4. Чистые URL → HTML-файлы
RewriteRule ^reparation-jantes-alu$ /pages/reparation-jantes-alu.html [L]
RewriteRule ^carrosserie$ /pages/carrosserie.html [L]
RewriteRule ^covering-vitres-teintees$ /pages/covering-vitres-teintees.html [L]
RewriteRule ^contact$ /pages/contact.html [L]
